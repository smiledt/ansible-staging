[[outputs.influxdb]]
  urls = ["http://{{ influxdb_ip }}:{{ influxdb_port }}"]
database = "{{ influxdb_database }}"
  ## Timeout for HTTP messages.
  timeout = "5s"

  ## HTTP Basic Auth
  username = "{{ influx_admin_user }}"
  password = "{{ influx_admin_pass }}"


